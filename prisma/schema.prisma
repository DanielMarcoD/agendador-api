generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  name          String
  email         String   @unique
  passwordHash  String
  createdAt     DateTime @default(now())
  events        Event[]  @relation("UserEvents")
}

model Event {
  id          String   @id @default(cuid())
  owner       User     @relation("UserEvents", fields: [ownerId], references: [id])
  ownerId     String
  title       String
  description String?
  category    String
  startsAt    DateTime
  endsAt      DateTime
  recurrence  String?  // ex.: RRULE simplificada
  createdAt   DateTime @default(now())

  @@index([ownerId, startsAt])
}