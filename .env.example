NODE_ENV=development
PORT=3333

# JWT Secrets (IMPORTANTE: Use secrets seguros em produção!)
# Gere com: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=sua_chave_secreta_access_token_muito_longa_e_segura_minimo_32_chars_1234567890
JWT_REFRESH_SECRET=sua_chave_secreta_refresh_token_muito_longa_e_segura_minimo_32_chars_0987654321
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=7d
JWT_ISSUER=agendador-api
JWT_AUDIENCE=agendador-web

# Configuração do banco de dados
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASS=sua_senha_do_banco
DB_NAME=agendador_db

# URL completa do banco (opcional - será gerada automaticamente se não fornecida)
DATABASE_URL=postgresql://postgres:sua_senha_do_banco@localhost:5432/agendador_db?schema=public
